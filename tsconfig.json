{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "rootDir": ".",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "customMatcher": "\\.scss$",
                    "camelCase": true
                }
            }
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "webpack",
    ],
    "awesomeTypescriptLoaderOptions": {
        /* ... */
    }
}
